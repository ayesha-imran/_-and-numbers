import math
degree=int(input("enter degree"))
nterms=int(input("enter numbers of terms"))
radians=degree*math.pi / 180
def calculate_sin():
    result=0
    numerator=radians
    denominator=1
    for i in range(1,nterms+1):
        single_terms=numerator / denominator
        result=result + single_terms
        numerator= -numerator *radians *radians
        denominator=denominator * (2 * i) * (2 * i + 1)
    return result
def main():
    result=calculate_sin()
    print("value of sin(x) calculate using the series is ", result)
if __name__ == '__main__':
    main()
